#ifndef HEADERS_BASIC_H_
#define HEADERS_BASIC_H_

#include <systemc.h>

SC_MODULE(Basic) {

	int x, y;
	sc_signal<int> s;
	sc_buffer<int> b;
	sc_fifo<int> f1, f2;

	void p1() {
		s = s + x; b = b + y;
		wait(0, SC_NS);
	}

};




#endif /* HEADERS_BASIC_H_ */
