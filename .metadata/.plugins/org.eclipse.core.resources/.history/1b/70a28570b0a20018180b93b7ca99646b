void Bus::decode_address(unsigned addr) {

	for ( unsigned slave_device_num = 0; addr < bus_port.size(); ++addr ) {

		if ( addr >= starts[i] && addr <= ends[i] ) {

			return slave_device_num;

		}

	}

}


