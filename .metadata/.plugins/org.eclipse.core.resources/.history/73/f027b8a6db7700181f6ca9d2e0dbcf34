#ifndef HEADERS_BASIC_H_
#define HEADERS_BASIC_H_

#include <systemc.h>

SC_MODULE(Basic) {

	int x, y;
	sc_signal<int> s;
	sc_buffer<int> b;
	sc_fifo<int> f1, f2;

	void p1() {

		cout << "x: " << x << "\ty: " << y << endl;

		s = s + x; b = b + y;
		wait(0, SC_NS);
		cout << "s: " << x << "\tb: " << b << endl;

		x = 20; y = 30;
		s = 200; b = 300;
		s = s + x; b = b + y;
		wait(0, SC_NS);
		cout << "s: " << x << "\tb: " << b << endl;


		int t;
		cout << "elements in f1: ";
	}

	void p2() {

		//for (;;) { }
	}

	void p3() {
		// for(;;) { }
	}

	SC_CTOR(Basic) : x(2), y(3) {
		SC_THREAD(p1);
		SC_THREAD(p2);
		sensitive << s;
		SC_THREAD(p3);
		sensitive << b; dont_initialize();
	}


};



#endif /* HEADERS_BASIC_H_ */
