#include <systemc.h>

SC_MODULE(Test) {

	sc_signal<int> sig_1;
	sc_signal<int> sig_2;
	int i = 0;

	void p1(void) {

		while (true) {

			cout << "p1, i: " << i << "\ลง" << sc_time_stamp() << endl;
			sig_1 = i++;
			wait(0, SC_NS);
		}

	}

	void p2(void) {

		while (true) {

			cout << "p2, i: " << i << "\ลง" << sc_time_stamp() << endl;
			sig = i++;
			wait(0, SC_NS);
		}

	}


	SC_CTOR(Test) {


		SC_THREAD(p1);
		SC_THREAD(p2);

	}
};

int sc_main(int argc, char* argv[]) {

	Test test("test");

	sc_start(1001, SC_NS);

	return 0;
}
